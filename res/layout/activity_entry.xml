<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageActivity" 
    
    >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#fff"
        >
        
        <RelativeLayout
            android:id="@+id/re_avatar"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >
       
            <ImageView 
        android:id="@+id/headimage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/default_useravatar"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
            
         </RelativeLayout>
        
        <TextView 
            android:id="@+id/feedid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        
        
        <TextView 
            android:id="@+id/msg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          	 android:text="爱久见人心"
            android:textColor="#353535"
            android:textSize="16sp"
            android:layout_toRightOf="@id/re_avatar"
            android:layout_marginTop="12dp"
            />
        
        <TextView 
            android:id="@+id/content"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="微软小冰：亲爱的 你最近好吗？？？"
                android:textColor="#AAAAAA"
                android:textSize="14sp" 
                android:layout_below="@id/msg_name"
                 android:layout_toRightOf="@id/re_avatar"
                  android:ellipsize="end"
                android:singleLine="true"
            />
